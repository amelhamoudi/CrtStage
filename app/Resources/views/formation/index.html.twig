{% extends 'base.html.twig' %}

{% set title="La liste des formations" %}

{% block css %}
{% endblock css %}
{% block content %}
<div class="box">
    <div class="box-body">


        <table class="table table-striped table-bordered table-hover" id="datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de formation</th>
                <th>Image name</th>
                <th>Image size</th>
                <th>Updated at</th>
                <th>Horaire</th>
                <th>Déscription</th>
                <th>Lieu</th>
                <th>Nombre de place</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': formation.id }) }}">{{ formation.id }}</a></td>
                <td>{{ formation.nomformation }}</td>
                <td><img src="{{ asset('uploads/formation/' ~ formation.imageName) }}" width="90"></td>
                <td>{{ formation.imageSize }}</td>
                <td>{% if formation.updatedAt %}{{ formation.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if formation.horaire %}{{ formation.horaire|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ formation.description }}</td>
                <td>{{ formation.lieu }}</td>
                <td>{{ formation.nbrplace }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('formation_show', { 'id': formation.id }) }}" class="btn btn-info"><i class="fa fa-search"></i></a>
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{ path('formation_edit', { 'id': formation.id }) }}">modifier</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('formation_new') }}" class="btn btn-info" >Créer</a>

    </div>
</div>
{% endblock %}
{% block js %}
{% endblock %}
















