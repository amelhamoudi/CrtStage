{% extends 'base.html.twig' %}

{% set title="La liste de gallerie" %}

{% block css %}
{% endblock css %}
{% block content %}
    <div class="box">
        <div class="box-body">


            <table class="table table-striped table-bordered table-hover" id="datatable">
                <thead>

                <tr>
                    <th>Id</th>
                    <th>Nom de gallerie</th>
                    <th>Actions</th>
                </tr>

                </thead>
                <tbody>
                {% for gallerie in galleries %}
                    <tr>
                        <td><a href="{{ path('gallerie_show', { 'id': gallerie.id }) }}">{{ gallerie.id }}</a></td>
                        <td>{{ gallerie.nomGallerie }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('gallerie_show', { 'id': gallerie.id }) }}" class="btn btn-info"><i class="fa fa-search"></i></a>
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>

                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a  href="{{ path('gallerie_edit', { 'id': gallerie.id }) }}">modifier</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('gallerie_new') }}"  class="btn btn-info">Cr√©er</a>

        </div>
    </div>
{% endblock %}
