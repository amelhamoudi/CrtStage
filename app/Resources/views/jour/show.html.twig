{% extends 'base.html.twig' %}
{% set title="Afficher La liste des journées internationalles" %}
{% block content %}

<div class="box">
    <div class="box-body">
        <h3>Journée</h3>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jour.id }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td><img src="{{ asset('uploads/jour/' ~ jour.imageName) }}"> </td>
            </tr>
            <tr>
                <th>Imagesize</th>
                <td>{{ jour.imageSize }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if jour.updatedAt %}{{ jour.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nomjour</th>
                <td>{{ jour.nomjour }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if jour.date %}{{ jour.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jour_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('jour_edit', { 'id': jour.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul> </div>
</div>

{% endblock %}
