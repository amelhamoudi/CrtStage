{% extends 'base.html.twig' %}

{% set title="Liste des membres" %}

{% block css %}
{% endblock css %}
{% block content %}
<div class="box">
    <div class="box-body">


        <table class="table table-striped table-bordered table-hover" id="datatable">
            <thead>
            <tr>
                <th>Id</th>
                <th>Image name</th>
                <th>Image size</th>
                <th>Updated at</th>
                <th>Nom</th>
                <th>Poste</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td><a href="{{ path('membre_show', { 'id': membre.id }) }}">{{ membre.id }}</a></td>
                <td><img src="{{ asset('uploads/membre/' ~ membre.imageName) }}" width="90"></td>
                <td>{{ membre.imageSize }}</td>
                <td>{% if membre.updatedAt %}{{ membre.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.poste }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('membre_show', { 'id': membre.id }) }}" class="btn btn-info"><i class="fa fa-search"></i></a>
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{ path('membre_edit', { 'id': membre.id }) }}">modifier</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('membre_new') }}" class="btn btn-info">Cr√©er</a>
    </div>
</div>
{% endblock %}
