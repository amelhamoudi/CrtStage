{% extends 'base.html.twig' %}

{% set title="La liste de gallerie" %}

{% block css %}
{% endblock css %}
{% block content %}
<div class="box">
    <div class="box-body">


        <table class="table table-striped table-bordered table-hover" id="datatable">
            <thead>
            <tr>
                <th>Id</th>

                <th>Nom</th>
                <th>Objet</th>
                <th>Email</th>
                <th>Message</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td><a href="{{ path('message_show', { 'id': message.id }) }}">{{ message.id }}</a></td>

                <td>{{ message.nom }}</td>
                <td>{{ message.objet }}</td>
                <td>{{ message.email }}</td>
                <td>{{ message.message }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('message_show', { 'id': message.id }) }}" class="btn btn-info"><i class="fa fa-search"></i></a>
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{ path('message_edit', { 'id': message.id }) }}">modifier</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</div>
{% endblock %}
{% block js %}
{% endblock %}
