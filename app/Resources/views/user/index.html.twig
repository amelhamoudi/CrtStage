{% extends 'base.html.twig' %}
{% set title="Administrateurs" %}

{% block css %}
{% endblock css %}

{% block content %}
    <div class="box">
        <div class="box-body">



            <table class="table table-striped table-bordered table-hover" id="datatable">


                <thead>
                <tr>
                    <th>NÂ°</th>
                    <th> Nom d'utilisateur</th>
                    <th> Email</th>
                    <th>Dernier acces</th>
                    <th>Etat</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.lastLogin|date('Y-m-d H:i:s')}}</td>
                        <td>  {% if user.Enabled %}
                            Compte Active
                        {% else %}
                            Compte desactive
                            {% endif %}<br>
                            {% if user.role == 'Administrateur' %}
                                Role Admin
                            {% else %}
                                Role User
                            {% endif %}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-info"><i class="fa fa-search"></i></a>
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>

                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="{{ path('user_edit', { 'id': user.id }) }}">modifier</a>
                                    </li>
                                </ul>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
